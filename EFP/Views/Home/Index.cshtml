@model Customer
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Enter your details</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-controller="Home" asp-action="Index" method="post"
          enctype="multipart/form-data" class="pl-3 pr-3">
        <div class="form-group row">
            <div class="col-8"><label>First Name:</label></div>
            <div class="col">
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8"><label>Last Name:</label></div>
            <div class="col">
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8"><label>Date of Birth:</label></div>
            <div class="col">
                <input asp-for="DateOfBirth" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8"><label>Financial Income/Expenses:</label></div>
            <div class="col">
                <input type="file" 
                       accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" 
                       asp-for="File" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col justify-content-end">
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </div>
    </form>
</div>
